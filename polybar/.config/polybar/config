[module/bspwm-tmp]
type = internal/bspwm
format = <label-state>
label-active = 
label-active-padding = 1
label-occupied = 
label-occupied-padding = 1
label-empty = 
label-empty-padding = 1

[module/title]
type = custom/script
exec = ~/.config/polybar/scripts/title.py
tail = true

[module/date]
type = internal/date
label-font = 1
format-padding = ${settings.default_padding}
format-background = ${settings.background}
date = %%{F#cc}%Y-%m-%d%%{F-}  %%{F#ff}%H:%M%%{F-}

[module/network]
type = internal/network
interface = enp3s0

format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-connected-padding = ${settings.default_padding}
format-disconnected-padding = ${settings.default_padding}

label-connected =  %upspeed%  %downspeed%
label-connected-foreground = ${settings.default_fg}
label-disconnected = disconnected
label-disconnected-foreground = ${settings.default_fg}


[module/weather]
type = custom/script
interval = 30
format = <label>
format-background = ${settings.weather_bg}
format-prefix = "  "
format-padding = ${settings.default_padding}
exec = ~/.config/polybar/weather

