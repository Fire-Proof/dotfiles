[bar/top]
monitor = ${env:MONITOR}
bottom = false
width = 100%
height = 25
offset-x = 0
offset-y = 0

foreground = ${settings.foreground}
background = ${settings.background}

fixed-center = true
wm-restack = bspwm

spacing = ${settings.icon_spacing}

;font-0 = HackNerdFont:size=10;3
;font-1 = HackNerdFont:size=10;3
